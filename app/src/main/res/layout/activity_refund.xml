<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_f0f0f0"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.alex.code.foundation.view.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="15dp"

        android:layout_marginTop="18dp"
        android:paddingLeft="@dimen/common_pd_left"
        android:paddingRight="@dimen/common_pd_right"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="退款原因:"
                android:textColor="@color/text_333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_reason"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_arrows_dowm"
                android:textColor="@color/text_333333"
                android:text="缺货"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_order_btn"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="手机号码:"
                android:textColor="@color/text_333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_order_btn"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="商品数量:"
                android:textColor="@color/text_333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_order_btn"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_333333"
                android:textSize="14sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:text="退款金额:"
                android:textColor="@color/text_333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/et_sum"
                android:gravity="center_vertical"
                android:textColor="@color/text_333333"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_order_btn"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textSize="10sp"
            android:textColor="@color/text_999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请与商家协商后申请退款，余额不得超过订单金额"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/text_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款说明:"/>

        <EditText
            android:id="@+id/et_refund_des"
            android:layout_marginTop="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="left"
            android:textColor="@color/text_333333"
            android:hint="退款说明"
            android:textSize="12sp"
            android:background="@drawable/shape_order_btn"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="提交申请"
            android:textColor="@color/white"
            android:background="@drawable/selector_btn_red"/>
    </LinearLayout>
</LinearLayout>