<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <com.alex.code.foundation.view.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#444444">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017.10"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_pd_left"
                android:text="本月最高剁手单品"
                android:textColor="@color/black"/>
            <LinearLayout
                android:paddingLeft="@dimen/common_pd_left"
                android:paddingRight="@dimen/common_pd_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_goods_no1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    tools:text="131464646456461313231313"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_price_no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="123.00元"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="@dimen/common_pd_left"
                android:paddingRight="@dimen/common_pd_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_goods_no2"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    tools:text="131464646456461313231313"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_price_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="123.00元"/>
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="@dimen/common_pd_left"
                android:paddingRight="@dimen/common_pd_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_goods_no3"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    tools:text="131464646456461313231313"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_price_no3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="123.00元"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_pd_left"
                android:text="本月消费分析"
                android:textColor="@color/black"/>

            <LinearLayout
                android:paddingLeft="@dimen/common_pd_left"
                android:paddingRight="@dimen/common_pd_right"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="总消费"
                    android:textColor="@color/text_333333"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="123.00元"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:paddingLeft="@dimen/common_pd_left"
                android:paddingRight="@dimen/common_pd_right"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="总订单"
                    android:textColor="@color/text_333333"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_total_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3笔"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>