<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alex.code.foundation.ui.register.RegisterActivity">

    <com.alex.code.foundation.view.CustomToolBar
        android:id="@+id/toolBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_captcha_selector"
        android:text="获取验证码"
        android:textColor="@color/bg_ffffff"
        android:gravity="center"
        android:id="@+id/tv_getCode"
        app:layout_constraintTop_toTopOf="@+id/verCode"
        app:layout_constraintBottom_toBottomOf="@+id/verCode"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="手机号码"
        android:textCursorDrawable="@drawable/text_cursor"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:met_primaryColor="@color/btn_color"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="登录密码"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/text_cursor"
        app:met_floatingLabel="highlight"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:met_primaryColor="@color/btn_color"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/verCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="验证码"
        android:inputType="number"
        android:textCursorDrawable="@drawable/text_cursor"
        app:met_floatingLabel="highlight"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:met_primaryColor="@color/btn_color"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintRight_toLeftOf="@+id/tv_getCode"
        />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="注册"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:pb_cornerRadius="10dp"
        app:pb_colorComplete="@color/green_complete"
        app:pb_colorNormal="@color/btn_color"
        app:pb_colorPressed="@color/btn_color_trans50"
        app:pb_textComplete="Successful"
        app:pb_textError="error"
        app:pb_textProgress="Loading"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/verCode"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>