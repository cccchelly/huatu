<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/common_pd_right">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:background="@color/trans"
            android:src="@drawable/ic_black_back"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_weight="1"
            android:background="@color/bg_f6f6f6"
            android:drawableLeft="@drawable/ic_home_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="搜一搜好货吧"
            android:textColor="@color/text_999999"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="搜索"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="@color/btn_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/btn_color"
        app:tabTextColor="@color/text_system"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>